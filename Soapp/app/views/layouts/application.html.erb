<!DOCTYPE html>
<html>
<head>
  <title>Soapp</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <script src="jquery/jquery-1.8.3.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="logo"><%= link_to 'SOAPP', root_path %></div>
    <nav>
      <ul>
        <% if session[:user_id] %>
          <li><%= link_to 'log out', '/auth/github/' %></li>
        <% else %>
          <li><%= link_to 'log in', '/auth/github/' %></li>
        <% end %>
      </ul>
    </nav>
  </header>
  <%= flash[:notice] %>

  <%= yield %>

</body>
</html>
