<% if !@soapps_repos.nil? %>
  <% @soapps_repos.each do |repo| %>
		<div id="<%= repo.id %>" class="card-repo">
			<h2><%= repo.display_name %></h2>
      <p>
        <span><a href=<%=repo.name%>><%= image_tag("github-icon.png")%></a></span>
        <%= link_to repo.name , repo.name %>
      </p>
      <h4>LAST COMMITS</h4>
      <hr>
      <ul class="branch_list">
        <% repo.commits.last(6).each do |commit| %>
          <li>
            <%= image_tag(commit.branch.user.avatar_url, :class => "git_img") %>
            <span><%= link_to commit.message, commit_path(commit) %></span><br>
            <p class="time_hover"><%=form_time(commit.created_at)%></p>
          </li>
        <% end %>
      </ul>
      <%= link_to "More info" , repo_path(repo), :class=>"more-info" %>
    </div>
  <% end %>
<% end %>

