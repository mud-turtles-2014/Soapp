<div class="repositories">
  <div class="content-repo">
    <div class="card-repo">
      <h2><%= @commit.branch.name %></h2>
      <h4>LAST COMMITS</h4>
      <hr>
      <ul class="branch_list">
        <li>Message: <%= @commit.message %></li>

        <li>User: <%= @commit.branch.user.name %></li>

        <li>Branch: <%= @commit.branch.name %></li>

        <li>Changes:
          <% @commit.file_changes.each do |change| %>
            <p><%= change.action_taken %></p>
            <p><%= change.file_path %></p>
          <% end %>
          Full record of commit:<br>
          <code><pre>
          <%= @commit.full_diff%>
        </pre></code>
        </li>
      </ul>
    </div>
  </div>
</div>
